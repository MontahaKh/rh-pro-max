{% extends 'base.html.twig' %}

{% block title %}Employees - RH Pro Max{% endblock %}

{% block header %}
    <div class="container-fluid bg-breadcrumb">
        <div class="container text-center py-5" style="max-width: 900px;">
            <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Employees</h4>
            <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                <li class="breadcrumb-item active text-primary">Employees</li>
            </ol>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid py-5">
        <div class="container py-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0"><i class="fas fa-users me-2 text-primary"></i>Employees List</h3>

                {% if is_granted('ROLE_HR_MANAGER') %}
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary rounded-pill">
                        <i class="fas fa-plus me-2"></i>Add Employee
                    </a>
                {% endif %}
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                            <tr>
                                <th class="ps-4">#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Job Title</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for user in users %}
                                <tr>
                                    <td class="ps-4">{{ user.id }}</td>

                                    <td>
                                        {{ (user.firstName ?? '') ~ ' ' ~ (user.lastName ?? '') }}
                                        {% if (user.firstName is empty) and (user.lastName is empty) %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>

                                    <td>{{ user.email }}</td>

                                    <td>{{ user.department ?? '-' }}</td>

                                    <td>{{ user.jobTitle ?? '-' }}</td>

                                    {# ✅ FIX ENUM DISPLAY: user.role is an Enum => use user.role.value #}
                                    <td>
                                        {% if user.role %}
                                            <span class="badge bg-info">{{  user.roleLabel }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>

                                    <td>
                                        {# Status peut être Enum aussi => même logique #}
                                        {% if user.status %}
                                            <span class="badge bg-secondary">{{ user.status.value }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>

                                    <td class="text-end pe-4">
                                        <a href="{{ path('app_user_show', {id: user.id}) }}"
                                           class="btn btn-sm btn-outline-primary rounded-pill">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>

                                        {% if is_granted('ROLE_HR_MANAGER') or (app.user and app.user.id == user.id) %}
                                            <a href="{{ path('app_user_edit', {id: user.id}) }}"
                                               class="btn btn-sm btn-outline-warning rounded-pill">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center py-4 text-muted">
                                        No employees found.
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
