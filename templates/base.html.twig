<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}RH Pro Max{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="HR Management System" name="keywords">
    <meta content="RH Pro Max - Human Resources Management" name="description">
    <!-- Favicon -->
    <link href="{{ asset('img/favicon.ico') }}" rel="icon">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="{{ asset('lib/animate/animate.min.css') }}"/>
    <link href="{{ asset('lib/lightbox/css/lightbox.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>

<body>
<!-- Apply dark mode immediately to prevent flash -->
<script>
    (function() {
        try {
            if (localStorage.getItem('theme') === 'dark') {
                document.body.classList.add('dark-mode');
            }
        } catch(e) {}
    })();
</script>

<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- Spinner End -->

<!-- Topbar Start -->
<div class="container-fluid topbar bg-light px-5 d-none d-lg-block">
    <div class="row gx-0 align-items-center">
        <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
            <div class="d-flex flex-wrap">
                <a href="#" class="text-muted small me-4"><i class="fas fa-building text-primary me-2"></i>Human Resources Management</a>
                <a href="tel:+01234567890" class="text-muted small me-4"><i class="fas fa-phone-alt text-primary me-2"></i>+01234567890</a>
                <a href="mailto:contact@rhpromax.com" class="text-muted small me-0"><i class="fas fa-envelope text-primary me-2"></i>contact@rhpromax.com</a>
            </div>
        </div>
        <div class="col-lg-4 text-center text-lg-end">
            <div class="d-inline-flex align-items-center" style="height: 45px;">
                <!-- Night Mode Toggle -->
                <button type="button" class="btn btn-sm btn-outline-primary rounded-circle me-3 darkModeToggle" title="Toggle Dark Mode">
                    <i class="fas fa-moon darkModeIcon"></i>
                </button>

                {% if app.user %}
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle text-dark" data-bs-toggle="dropdown">
                            <small><i class="fa fa-user-circle text-primary me-2"></i>{{ app.user.firstName ?? app.user.email }}</small>
                        </a>

                        <div class="dropdown-menu rounded">

                            {# ✅ Dashboard (tous les rôles) #}
                            <a href="{{ path('app_dashboard') }}" class="dropdown-item">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                            <div class="dropdown-divider"></div>

                            {% if is_granted('ROLE_EMPLOYEE') %}
                                <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="dropdown-item"><i class="fas fa-user-alt me-2"></i> My Profile</a>
                                <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="dropdown-item"><i class="fas fa-cog me-2"></i> Account Settings</a>
                                <div class="dropdown-divider"></div>
                            {% elseif is_granted('ROLE_CANDIDATE') %}
                                <span class="dropdown-item-text"><i class="fas fa-user me-2"></i>{{ app.user.fullName ?? app.user.email }}</span>
                                <a href="{{ path('app_candidate_dashboard') }}" class="dropdown-item"><i class="fas fa-clipboard-list me-2"></i> My Applications</a>
                                <div class="dropdown-divider"></div>
                            {% else %}
                                <span class="dropdown-item-text"><i class="fas fa-user me-2"></i>{{ app.user.fullName ?? app.user.email }}</span>
                                <div class="dropdown-divider"></div>
                            {% endif %}

                            <a href="{{ path('app_logout') }}" class="dropdown-item text-danger"><i class="fas fa-power-off me-2"></i> Log Out</a>
                        </div>
                    </div>
                {% else %}
                    <a href="{{ path('app_register') }}"><small class="me-3 text-dark"><i class="fa fa-user text-primary me-2"></i>Register</small></a>
                    <a href="{{ path('app_login') }}"><small class="me-3 text-dark"><i class="fa fa-sign-in-alt text-primary me-2"></i>Login</small></a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<!-- Topbar End -->

<!-- Navbar Start -->
<div class="container-fluid position-relative p-0">
    <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
        <a href="{{ path('app_home') }}" class="navbar-brand p-0">
            <h1 class="text-primary"><i class="fas fa-users-cog me-3"></i>RH Pro Max</h1>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="fa fa-bars"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0">
                <a href="{{ path('app_home') }}" class="nav-item nav-link {% if app.request.get('_route') == 'app_home' %}active{% endif %}">Home</a>

                {# ✅ Dashboard link (visible si connecté) #}
                {% if app.user %}
                    <a href="{{ path('app_dashboard') }}"
                       class="nav-item nav-link {% if 'dashboard' in app.request.get('_route') %}active{% endif %}">
                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                    </a>
                {% endif %}

                {# Employees menu - only for EMPLOYEE role and above #}
                {% if is_granted('ROLE_EMPLOYEE') %}
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link {% if 'user' in app.request.get('_route') %}active{% endif %}" data-bs-toggle="dropdown">
                            <span class="dropdown-toggle">Employees</span>
                        </a>
                        <div class="dropdown-menu m-0">
                            <a href="{{ path('app_user_index') }}" class="dropdown-item">All Employees</a>
                            {% if is_granted('ROLE_HR_MANAGER') %}
                                <a href="{{ path('app_user_new') }}" class="dropdown-item">Add Employee</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                {# Skills menu - only for EMPLOYEE role and above #}
                {% if is_granted('ROLE_EMPLOYEE') %}
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link {% if 'skill' in app.request.get('_route') %}active{% endif %}" data-bs-toggle="dropdown">
                            <span class="dropdown-toggle">Skills</span>
                        </a>
                        <div class="dropdown-menu m-0">
                            <a href="{{ path('app_skill_index') }}" class="dropdown-item">All Skills</a>
                            {% if is_granted('ROLE_HR_MANAGER') %}
                                <a href="{{ path('app_skill_new') }}" class="dropdown-item">Add Skill</a>
                                <a href="{{ path('app_skill_category_index') }}" class="dropdown-item">Skill Categories</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                {# Job Offers menu - PUBLIC access for viewing, HR for create #}
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link {% if 'job_offer' in app.request.get('_route') %}active{% endif %}" data-bs-toggle="dropdown">
                        <span class="dropdown-toggle">Job Offers</span>
                    </a>
                    <div class="dropdown-menu m-0">
                        <a href="{{ path('app_job_offer_index') }}" class="dropdown-item">All Job Offers</a>
                        {% if is_granted('ROLE_HR_MANAGER') %}
                            <a href="{{ path('app_job_offer_new') }}" class="dropdown-item">Create Job Offer</a>
                        {% endif %}
                    </div>
                </div>

                {# Candidates menu - only for RECRUITER role and above #}
                {% if is_granted('ROLE_RECRUITER') %}
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link {% if 'candidate_profile' in app.request.get('_route') %}active{% endif %}" data-bs-toggle="dropdown">
                            <span class="dropdown-toggle">Candidates</span>
                        </a>
                        <div class="dropdown-menu m-0">
                            <a href="{{ path('app_candidate_profile_index') }}" class="dropdown-item">All Candidates</a>
                            <a href="{{ path('app_candidate_profile_new') }}" class="dropdown-item">Add Candidate</a>
                        </div>
                    </div>
                {% endif %}

                {# Candidate Dashboard - only for CANDIDATE role #}
                {% if is_granted('ROLE_CANDIDATE') %}
                    <a href="{{ path('app_candidate_dashboard') }}" class="nav-item nav-link {% if 'candidate_dashboard' in app.request.get('_route') or 'candidate_application' in app.request.get('_route') %}active{% endif %}">
                        <i class="fas fa-clipboard-list me-1"></i>My Applications
                    </a>
                {% endif %}

                <!-- Mobile Night Mode Toggle -->
                <div class="nav-item d-lg-none">
                    <button type="button" class="nav-link btn btn-link darkModeToggle" style="text-align: left; width: 100%;">
                        <i class="fas fa-moon darkModeIcon me-2"></i> Dark Mode
                    </button>
                </div>
            </div>
        </div>
    </nav>
</div>
<!-- Navbar End -->

<!-- Page Header Start -->
{% block header %}
    <div class="container-fluid bg-breadcrumb">
        <div class="bg-breadcrumb-single"></div>
        <div class="container text-center py-5" style="max-width: 900px;">
            <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">{% block page_title %}{% endblock %}</h4>
            <ol class="breadcrumb justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                {% block breadcrumb %}{% endblock %}
            </ol>
        </div>
    </div>
{% endblock %}
<!-- Page Header End -->

<!-- Main Content Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </div>
</div>
<!-- Main Content End -->

<!-- Footer Start -->
<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5 border-start-0 border-end-0" style="border: 1px solid; border-color: rgb(255, 255, 255, 0.08);">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 col-xl-4">
                <div class="footer-item">
                    <a href="{{ path('app_home') }}" class="p-0">
                        <h4 class="text-white"><i class="fas fa-users-cog me-3"></i>RH Pro Max</h4>
                    </a>
                    <p class="mb-4">Complete Human Resources Management System for modern businesses. Manage employees, skills, job offers, and recruitment processes efficiently.</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-2">
                <div class="footer-item">
                    <h4 class="text-white mb-4">Quick Links</h4>
                    <a href="{{ path('app_user_index') }}"><i class="fas fa-angle-right me-2"></i> Employees</a>
                    <a href="{{ path('app_skill_index') }}"><i class="fas fa-angle-right me-2"></i> Skills</a>
                    <a href="{{ path('app_job_offer_index') }}"><i class="fas fa-angle-right me-2"></i> Job Offers</a>
                    <a href="{{ path('app_candidate_profile_index') }}"><i class="fas fa-angle-right me-2"></i> Candidates</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item">
                    <h4 class="text-white mb-4">Management</h4>
                    <a href="{{ path('app_skill_category_index') }}"><i class="fas fa-angle-right me-2"></i> Skill Categories</a>
                    <a href="{{ path('app_user_new') }}"><i class="fas fa-angle-right me-2"></i> Add Employee</a>
                    <a href="{{ path('app_job_offer_new') }}"><i class="fas fa-angle-right me-2"></i> New Job Offer</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item">
                    <h4 class="text-white mb-4">Contact Info</h4>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-map-marker-alt text-primary me-3"></i>
                        <p class="text-white mb-0">123 Street, City, Country</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-envelope text-primary me-3"></i>
                        <p class="text-white mb-0">contact@rhpromax.com</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fa fa-phone-alt text-primary me-3"></i>
                        <p class="text-white mb-0">(+012) 3456 7890</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->

<!-- Copyright Start -->
<div class="container-fluid copyright py-4">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-md-6 text-center text-md-start mb-md-0">
                <span class="text-body"><a href="#" class="border-bottom text-white"><i class="fas fa-copyright text-light me-2"></i>RH Pro Max</a>, All rights reserved.</span>
            </div>
            <div class="col-md-6 text-center text-md-end text-body">
                Human Resources Management System
            </div>
        </div>
    </div>
</div>
<!-- Copyright End -->

<!-- Back to Top -->
<a href="#" class="btn btn-primary btn-lg-square rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

<!-- JavaScript Libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('lib/wow/wow.min.js') }}"></script>
<script src="{{ asset('lib/easing/easing.min.js') }}"></script>
<script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
<script src="{{ asset('lib/counterup/counterup.min.js') }}"></script>
<script src="{{ asset('lib/lightbox/js/lightbox.min.js') }}"></script>
<script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>

<!-- Template Javascript -->
<script src="{{ asset('js/main.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
