{% extends 'base.html.twig' %}

{% block title %}Employees - RH Pro Max{% endblock %}

{% block header %}
<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Employees</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item active text-primary">Employees</li>
        </ol>
    </div>
</div>
<!-- Header End -->
{% endblock %}

{% block body %}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="fas fa-users me-2"></i>Employee List</h2>
            <a href="{{ path('app_user_new') }}" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i>Add New Employee
            </a>
        </div>

        <div class="table-responsive bg-white rounded shadow-sm">
            <table class="table table-hover mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Matricule</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Job Title</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td><span class="badge bg-secondary">{{ user.matricule }}</span></td>
                        <td><strong>{{ user.firstName }} {{ user.lastName }}</strong></td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.department }}</td>
                        <td>{{ user.jobTitle }}</td>
                        <td>
                            {% if user.role %}
                                {# choisir la couleur du badge en fonction du r√¥le #}
                                {% set badge_class =
                                    user.role == 'ADMIN'       ? 'danger'  :
                                    (user.role == 'HR_MANAGER' ? 'warning' :
                                    (user.role == 'TEAM_MANAGER' ? 'info'  :
                                    (user.role == 'EMPLOYEE'   ? 'secondary' : 'primary')))
                                %}

                                <span class="badge bg-{{ badge_class }}">
        {{ user.role }}
    </span>
                            {% endif %}

                        </td>
                        <td>
                            {% if user.status %}
                                <span class="badge bg-{{ user.status.value == 'ACTIVE' ? 'success' : 'secondary' }}">
                                    {{ user.status.value }}
                                </span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-warning rounded-pill" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">No employees found</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
